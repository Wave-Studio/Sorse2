{
	"compilerOptions": {
		"lib": ["deno.window", "ESNext", "DOM"]
	},
	"fmt": {
		"options": {
			"useTabs": true,
			"indentWidth": 4,
			"lineWidth": 80,
			"singleQuote": false,
			"proseWrap": "always"
		}
	},
	"lint": {
		"report": "pretty"
	},
	"tasks": {
		"fmt": "deno fmt --config=./deno.jsonc",
		"lint": "deno lint --config=./deno.jsonc"
	}
}
